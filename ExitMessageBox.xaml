<Window x:Class="PiterExp.ExitMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         WindowStyle="None"
        ResizeMode="NoResize"
        Title="Custom Message Box" Height="200" Width="400"  WindowStartupLocation="CenterScreen" Background="#B0B7C6">
    <Grid>
       

        
        <TextBlock Text="Вы действительно хотите выйти из приложения?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="Да" Width="80" FontSize="18" Margin="10" Click="YesButton_Click" />
            <Button Content="Нет" Width="80" FontSize="18" Margin="10" Click="NoButton_Click" />
        </StackPanel>
    </Grid>
</Window>
