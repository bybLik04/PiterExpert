<Window x:Class="PiterExp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PiterExp"
        mc:Ignorable="d"
        Title="База данных" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <ComboBox Height="31" x:Name="tableComboBox" Text="Таблицы" Background="#FF8E8585" SelectionChanged="ComboBox_SelectionChanged" VerticalAlignment="Top" HorizontalAlignment="Right" Width="195" >
            <ComboBoxItem IsEnabled="False">Выберите таблицу</ComboBoxItem>
        </ComboBox>
        <DataGrid ItemsSource="{Binding}" x:Name="dtGrid" Margin="0,0,200,0" />
        <Button x:Name="Save_btn" Content="Сохранить изменения" HorizontalAlignment="Right" Margin="0,36,10,0" VerticalAlignment="Top" Width="185" Click="Save_btn_Click"/>
        <Button x:Name="Cancel_btn" Content="Отменить изменения" HorizontalAlignment="Right" Margin="0,73,10,0" VerticalAlignment="Top" Width="185" Click="Cancel_btn_Click"/>
    </Grid>
</Window>
